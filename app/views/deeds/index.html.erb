<div id="myCarousel" class="carousel slide" data-ride="carousel">
	<ol class="carousel-indicators">
		<li data-target="#myCarousel" data-slide-to="0" class="active"></li>
    <li data-target="#myCarousel" data-slide-to="1"></li>
  </ol>
  <div class="carousel-inner">
    <div class="item active">
      <%= image_tag "holi.jpg" %>
      <div class="container">
        <div class="carousel-caption">
          <h1>Welcome to Selfless!</h1>
          <h3>Selfless is sending you daily reminders of good deeds you can make happen <strong>straight to your phone.</strong></h3>    
          <p>
            <% if user_signed_in? %>
              <%= link_to 'Edit Account', edit_user_registration_path, class: "btn btn-lg btn-primary caro" %></li>
            <% else %>
              <%= link_to 'Sign Up', new_user_registration_path, class: "btn btn-lg btn-primary caro" %></li>
            <% end %>
          </p>
        </div>
      </div>
    </div>
    <div class="item">
      <%= image_tag "color_wood.jpg" %>
      <div class="container">
        <div class="carousel-caption">
          <h1>Did you know...</h1>
          </h3>
          <br>
          <p><a class="btn btn-lg btn-primary caro" href="/contributions" role="button">Good Deeds Forum</a></p>
        </div>
      </div>
    </div>
  </div>
  <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev"><span class="glyphicon glyphicon-chevron-left"></span></a>
  <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next"><span class="glyphicon glyphicon-chevron-right"></span></a>
